<script type="text/template" id="grid-template">
  <div id='grid' class='grid'>
    <button id="#add_campaign" class='add_campaign btn btn-success'>Add Campaign</button>
    <h2>Campaigns List</h2>
    <ul id='campaign_list'></ul>

    <div class="counter">
      
